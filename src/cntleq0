read input
if ! [[ "$input" =~ ^[1-4]+$ ]]; then
    echo -e "\033[1m\033[38;5;213m\033[48;5;\n15m输入不合法或退出数字，退出脚本。\e[0m"
    exit 1
fi

echo -e "\033[1m\033[38;5;213m\033[48;5;\n15m执行cntleq$input脚本\e[0m"
cntleq$input
